<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="278.0" prefWidth="232.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaFXUI.view.PauseWindowController">
   <children>
      <ImageView fitHeight="288.0" fitWidth="253.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../resources/images/Pause%20Menu%20Background.png" />
         </image>
      </ImageView>
      <VBox minHeight="220.0" minWidth="180.0" prefHeight="240.0" prefWidth="200.0" spacing="5.0">
         <children>
            <Label alignment="BASELINE_CENTER" prefHeight="17.0" prefWidth="249.0" style="-fx-underline: true;" text="Battleships">
               <font>
                  <Font name="System Bold" size="17.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="8.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="buttonLoadGameFromXML" mnemonicParsing="false" onAction="#buttonLoadGameFromXML_Clicked" prefHeight="25.0" prefWidth="217.0" text="Load Game from XML" />
            <Button fx:id="buttonStartGame" mnemonicParsing="false" onAction="#buttonStartGame_Clicked" prefHeight="25.0" prefWidth="269.0" text="Start New Game" />
            <Button fx:id="buttonEndGame" layoutX="15.0" layoutY="97.0" mnemonicParsing="false" onAction="#buttonEndGame_Clicked" prefHeight="25.0" prefWidth="269.0" text="End Current Game" />
            <Button fx:id="buttonContinueGame" layoutX="10.0" layoutY="68.0" mnemonicParsing="false" onAction="#buttonContinueGame_Clicked" prefHeight="25.0" prefWidth="269.0" text="Continue Game" />
            <Button fx:id="buttonReplay" mnemonicParsing="false" onMouseClicked="#buttonReplayOnMouseClicked" prefHeight="25.0" prefWidth="184.0" text="Replay Mode" />
            <Button fx:id="buttonExitApplication" mnemonicParsing="false" onAction="#buttonExitApplication_Clicked" prefHeight="25.0" prefWidth="224.0" text="Exit Application" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <StackPane.margin>
            <Insets bottom="35.0" left="20.0" right="20.0" top="20.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
